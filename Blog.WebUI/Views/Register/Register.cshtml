@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

    <div class="col-sm-7">
        <h2>Register</h2>

        <form method="post" role="form" asp-controller="Register" asp-action="Register" enctype="multipart/form-data">
            <div class="form-group">
                <input class="form-control" asp-for="Name" id="bbname">
            </div>
            <div class="form-group">
                <input class="form-control" asp-for="Surname" id="bbemail">
            </div>
            <div class="form-group">
                <input class="form-control" asp-for="Email" id="bbphone">
            </div>
            <div class="form-group">
                <input class="form-control" asp-for="Password" id="bbphone">
            </div>
            <div class="form-group">
                <input class="form-control" type="file" id="bbphone">
            </div>
            <button type="submit" class="btn btn-default" id="bbsubmit">Register</button>
        </form>
    </div>




