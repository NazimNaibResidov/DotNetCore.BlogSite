@model IEnumerable<Article>
@{
    ViewData["Title"] = "Index";
}
<div class="col-sm-8">
    <div class="posts">
        @foreach (var item in Model)
        {
            <article class="blog-post">
                <header>
                    <h2>
                        <a asp-action="Read" asp-controller="Blog" asp-route-id="@item.Id">@item.Head.</a>
                    </h2>
                    <ul class="info">
                        <li>
                            <a asp-action="Blog" asp-controller="Category"
                               asp-route-id="@item.CategoryId">{@item.Category.Name}</a>
                        </li>
                        <li><a href="#">{ @item.DateTime.ToString("MMMM yyyyy")</a></li>
                        <li><a href="javascrip:void(0)">{ @item.User.Name }</a></li>
                        <li>{ Comments: <a href="javascrip:void(0)">@item.Comments.Count</a> }</li>
                    </ul>
                </header>
                <div class="content">
                    <figure>
                        <a asp-action="Read" asp-controller="Blog" asp-route-id="@item.Id">
                            <img src="@item.Image.MPath" alt="">
                        </a>
                    </figure>
                    <div class="text">
                        <p text="@item.Contet"></p>
                    </div>
                    <a asp-action="Read" asp-controller="Blog" asp-route-id="@item.Id" class="btn btn-default">Read more</a>
                </div>
            </article>
        }

        <div class="load-more">
            <a href="#">Load More</a>
        </div>
        </div>
    </div>

