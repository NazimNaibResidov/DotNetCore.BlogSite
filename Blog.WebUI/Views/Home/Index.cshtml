@model IEnumerable<Article>
@{
    ViewData["Title"] = "Index";
}

<div class="col-md-9">
    <div class="blog-posts">

        @foreach (Article item in Model)
        {
        <article class="post post-medium">
            <div class="row">

                <div class="col-md-5">
                    <div class="post-image">
                        <div class="img-hover-zoom">
                            <img style="height:210px;" class="img-thumbnail" src="@item.Image.BPath" alt="">
                        </div>
                        </div>
                       
                </div>

                <div class="col-md-7">

                    <div class="post-content">
                         <div class="head-zoom">
                            <h2><a asp-action="Read" asp-controller="Blog" asp-route-id="@item.Id">@item.Head</a>
                            </h2>
                        </div>
                        <p  text="@item.Contet"></p>
                        <br />

                    </div>
                </div>

            </div>
            <div>
                <br />
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="post-meta">
                        <span><i class="fa fa-calendar"></i> @item.DateTime.ToString("MMMM dd yyyy") </span>
                        <span><i class="fa fa-user"></i> By <a href="Javascrip:void(0)">@item.User.Name @item.User.Surname</a> </span>
                        <span><i class="fa fa-tag"></i>  <a href="/Category/Blog/@item.Id">@item.Category.Name</a> </span>
                        <span><i class="fa fa-comments"></i> <a href="Javascrip:void(0)">@item.Comments.Count Comments</a></span>
                        <a asp-action="Read" asp-controller="Blog" asp-route-id="@item.Id"  class="btn btn-xs btn-primary pull-right">Read more...</a>
                    </div>
                </div>
            </div>

        </article>
        }
        





        <ul class="pagination pagination-lg pull-right">
            <li><a href="#">«</a></li>
            <li class="active"><a href="#">1</a></li>
            <li><a href="#">2</a></li>
            <li><a href="#">3</a></li>
            <li><a href="#">»</a></li>
        </ul>

    </div>
</div>

@section head{ 
    <style>
        .img-hover-zoom:hover img{
            transform: scale(1.1);
           
        }
        
    </style>
}