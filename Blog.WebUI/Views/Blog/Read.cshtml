@model Article
@{
    ViewData["Title"] = "Read";
}
<div class="col-md-8">
    <article class="blog-post">
    <header>
        <h2>
            <a href="#">@Model.Head.</a>
        </h2>
        <ul class="info">
            <li>
                <a asp-action="Blog" asp-controller="Category"
                   asp-route-id="@Model.Category.Id">{@Model.Category.Name}</a>
            </li>
            <li><a href="javascrip:void(0)">{ @Model.DateTime.ToString("MMMM yyyy") }</a></li>
            <li><a href="javascrip:void(0)">{ @Model.User.Name @Model.User.Surname }</a></li>
            <li>{ Comments: <a href="javascrip:void(0)">@Model.Comments.Count</a> }</li>
        </ul>
    </header>
    <div class="text-editor">
        <blockquote>
            @Model.Contet
        </blockquote>

        <figure>
            <img src="@Model.Image.MPath" alt="">
            <figcaption>@Model.Image.Name</figcaption>
        </figure>

        <div class="author-wrap">
            <div class="author">
                <figure>
                    <a href="#">
                        <img src="@Model.Image.UserPath" alt="#">
                    </a>
                </figure>
                <div class="name">@Model.User.Name @Model.User.Surname</div>
                <div class="description">
                    Salam Necesen Menim adim Naib
                </div>
            </div>
        </div>

    </div>
</article></div>

