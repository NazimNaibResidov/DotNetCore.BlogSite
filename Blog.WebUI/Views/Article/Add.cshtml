@model Article
@{
    ViewData["Title"] = "Add";
}

<div class="col-sm-9">
    <div class="featured-box featured-box-primary align-left mt-xlg" style="height: 400px;">
        <div class="box-content">
            <h4 class="heading-primary text-uppercase mb-md">Added Artical</h4>
            <form asp-action="Add" asp-controller="Article" id="frmSignUp" method="post" enctype="multipart/form-data">
                <div class="row">
                    <div class="form-group">
                        <div class="col-md-12">
                            <label asp-for="Head"></label>
                            <input asp-for="Head" class="form-control input-lg">
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="form-group">
                        <div class="col-md-12">
                            <label asp-for="Contet"></label>
                            <textarea asp-for="Contet" class="form-control input-lg"></textarea>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group">
                        <div class="col-md-12">
                            <label asp-for="Category"></label>
                            <select class="form-control" asp-for="CategoryId">
                                @foreach (Category item in ViewBag.cat)
                                {
                                    <option value="@item.Id">@item.Name</option>
                                }
                            </select>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group">
                        <div class="col-md-12">
                            <label >Image</label>
                            <input name="file" type="file" class="form-control">
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12">
                        <input type="submit" value="Added" class="btn btn-success form-control" >
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

