@model LoginModel
@{
    ViewData["Title"] = "Login";
}
<div style="margin-left:150px" class="col-sm-9">
    <div class="featured-box featured-box-primary align-left mt-xlg" style="height: 400px;">
        <div class="box-content">
            <h4 class="heading-primary text-uppercase mb-md">Login </h4>
            <form asp-action="Login" asp-controller="Login" id="frmSignUp" method="post">
                <div class="row">
                    <div class="form-group">
                        <div class="col-md-12">
                            <label asp-for="Email"></label>
                            <input asp-for="Email" class="form-control input-lg">
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group">
                        <div class="col-md-12">
                            <label asp-for="Password"></label>
                            <input asp-for="Password" class="form-control input-lg">
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12">
                        <input type="submit" value="Login" class="btn btn-primary form-control" data-loading->
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>


